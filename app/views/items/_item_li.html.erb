 <li class="<%= li_class_for_item(item) %>">
  <%= content_tag :li, item, :class => li_class_for_item(item) do %>
                        <div class="view">
                         <%= form_for([@list, item]) do |f| %>
                            <%= f.check_box :status, :class => "completed", :checked => item.complete? %>
                            <%= f.submit%>
                            <% end %>
                            <label><%= item.description %></label>
                        </div>
                    </li>