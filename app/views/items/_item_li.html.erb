 
  <%= li_for_item(item) do %>
                        <div class="view">
                         <%= form_for([@list, item]) do |f| %>
                            <%= f.check_box :status, :class => "completed", :checked => item.complete? %>
                            <%= f.submit%>
                            <% end %>
                            <label><%= item.description %></label>
                             <%= button_to "x", list_item_path(item.list, item), :method => "delete", :class => "destroy" %>
                        </div>
                    </li>
            <% end %>